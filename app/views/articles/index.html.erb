<% provide(:title, 'Home') %>

<table class="itemlist" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
  <% @articles.each_with_index do |article, index|  %>
    <tr class="athing">
      <td align="right" valign="top" class="title">
        <span class="rank"><%= index + 1 %>.</span>
      </td>
      <td valign="top" class="votelinks">
        <center>
          <!-- TODO: Create an onclick event here -->
          <span class="glyphicon glyphicon-chevron-up" title="upvote"></span>
        </center>
      </td>
      <td class="title"><%= link_to article.title, article %></td>
    </tr>
    <tr>
      <td colspan="2"></td>
      <!-- <td><%= article.text %></td> -->
      <td class="subtext">
        <span class="score">100 points</span>
        by greenonion
        <span class="age">2 hours ago</span>
        |
        112 Comments
      </td>
    </tr>
  <% end %>
</table>
